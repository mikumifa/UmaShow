{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main (Electron)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": ["."],
      "preLaunchTask": "npm: prestart",
      "outFiles": ["${workspaceFolder}/.erb/dll/*.js"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Start Renderer (dev server)",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:renderer"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Debug Main + Renderer",
      "configurations": ["Start Renderer (dev server)", "Debug Main (Electron)"]
    }
  ]
}
